<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AdonisJS Crash Course </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <nav class="w-full bg-white shadow-md border flex justify-center px-4 py-2">
        <div class="w-1/2 flex justify-between">
            <h1 class="text-xl find-semibold">
                <a href="/">Adonisgram</a>
            </h1>
        <div>


            @if(auth.isAuthenticated)
            <!-- This example requires Tailwind CSS v2.0+ -->
            <div class="relative inline-block text-left">
                <button id="dropdown" class="cursor-pointer outline-none focus-none">
                    <img src="{{ auth.user.avatar }}" class="h-8 w-8 rounded-full border" alt="profile">
                </button>


                <div id="dropdown-items" class="hidden origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
                <div class="py-1" role="none">
                    <a href="/{{auth.user.username}}" class="text-gray-700 block px-4 py-2 text-sm border-b" role="menuitem" tabindex="-1" id="menu-item-0">Profile</a>
                    <form action="/logout" method="POST">
                    <button type="submit" class="text-gray-700 block w-full text-left px-4 py-2 text-sm" role="menuitem" tabindex="-1" id="menu-item-3">Sign out</button>
                    </form>
                </div>
                </div>
            </div>

                @endif
            </div>
        </div>
    </nav>
    <div class="bg-gray-100 min-h-screen flex justify-center">
        <div class="w-full md:w-1/2">
            @section('content')
            @endsection
        </div>
    </div>

    <script>
        const dropdown = document.getElementById('dropdown')
        const item = document.getElementById('dropdown-items')
        dropdown.addEventListener('click', () => {
            if(item.classList.contains('hidden')) {
                item.classList.remove('hidden')
            } else {
                item.classList.add('hidden')
            }

        })
    </script>
</body>
</html>